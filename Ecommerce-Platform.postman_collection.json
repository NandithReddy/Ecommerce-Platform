{
  "info": {
    "_postman_id": "ecommerce-platform-collection",
    "name": "Ecommerce Platform API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Postman collection for Ecommerce Platform microservices with JWT authentication."
  },
  "variable": [
    { "key": "user_base_url", "value": "http://localhost:8080" },
    { "key": "product_base_url", "value": "http://localhost:8081" },
    { "key": "order_base_url", "value": "http://localhost:8082" },
    { "key": "jwt_token", "value": "" }
  ],
  "item": [
    {
      "name": "User Service",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "url": { "raw": "{{user_base_url}}/api/auth/register", "host": [ "{{user_base_url}}" ], "path": [ "api", "auth", "register" ] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\",\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\"\n}"
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "url": { "raw": "{{user_base_url}}/api/auth/login", "host": [ "{{user_base_url}}" ], "path": [ "api", "auth", "login" ] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var json = pm.response.json();",
                  "if (json.token) {",
                  "    // Save token to collection variable and environment variable",
                  "    pm.collectionVariables.set('jwt_token', json.token);",
                  "    pm.environment.set('jwt_token', json.token);",
                  "    console.log('Saved jwt_token to collection and environment');",
                  "} else {",
                  "    console.log('No token found in response');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Get All Users",
          "request": {
            "method": "GET",
            "header": [ { "key": "Authorization", "value": "Bearer {{jwt_token}}" } ],
            "url": { "raw": "{{user_base_url}}/api/users", "host": [ "{{user_base_url}}" ], "path": [ "api", "users" ] }
          }
        },
        {
          "name": "Get User By ID",
          "request": {
            "method": "GET",
            "header": [ { "key": "Authorization", "value": "Bearer {{jwt_token}}" } ],
            "url": { "raw": "{{user_base_url}}/api/users/{{user_id}}", "host": [ "{{user_base_url}}" ], "path": [ "api", "users", "{{user_id}}" ] }
          }
        },
        {
          "name": "Check User Exists By ID",
          "request": {
            "method": "GET",
            "header": [ { "key": "Authorization", "value": "Bearer {{jwt_token}}" } ],
            "url": { "raw": "{{user_base_url}}/api/users/exists/{{user_id}}", "host": [ "{{user_base_url}}" ], "path": [ "api", "users", "exists", "{{user_id}}" ] }
          }
        },
        {
          "name": "Create User",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{jwt_token}}" } ],
            "url": { "raw": "{{user_base_url}}/api/users", "host": [ "{{user_base_url}}" ], "path": [ "api", "users" ] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"newuser@example.com\",\n  \"password\": \"newpassword\",\n  \"firstName\": \"Jane\",\n  \"lastName\": \"Smith\"\n}"
            }
          }
        },
        {
          "name": "Delete User By ID",
          "request": {
            "method": "DELETE",
            "header": [ { "key": "Authorization", "value": "Bearer {{jwt_token}}" } ],
            "url": { "raw": "{{user_base_url}}/api/users/{{user_id}}", "host": [ "{{user_base_url}}" ], "path": [ "api", "users", "{{user_id}}" ] }
          }
        },
        {
          "name": "Update User By ID",
          "request": {
            "method": "PUT",
            "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{jwt_token}}" } ],
            "url": { "raw": "{{user_base_url}}/api/users/{{user_id}}", "host": [ "{{user_base_url}}" ], "path": [ "api", "users", "{{user_id}}" ] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"updateduser@example.com\",\n  \"password\": \"updatedpassword\",\n  \"firstName\": \"Updated\",\n  \"lastName\": \"User\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Product Service",
      "item": [
        {
          "name": "Get All Products",
          "request": {
            "method": "GET",
            "url": { "raw": "{{product_base_url}}/api/products", "host": [ "{{product_base_url}}" ], "path": [ "api", "products" ] }
          }
        },
        {
          "name": "Get Product By ID",
          "request": {
            "method": "GET",
            "url": { "raw": "{{product_base_url}}/api/products/{{product_id}}", "host": [ "{{product_base_url}}" ], "path": [ "api", "products", "{{product_id}}" ] }
          }
        },
        {
          "name": "Search Products By Name",
          "request": {
            "method": "GET",
            "url": { "raw": "{{product_base_url}}/api/products/search?name={{search_name}}", "host": [ "{{product_base_url}}" ], "path": [ "api", "products", "search" ], "query": [ { "key": "name", "value": "{{search_name}}" } ] }
          }
        }
      ]
    },
    {
      "name": "Order Service",
      "item": [
        {
          "name": "Create Order",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "url": { "raw": "{{order_base_url}}/api/orders?userId={{user_id}}", "host": [ "{{order_base_url}}" ], "path": [ "api", "orders" ], "query": [ { "key": "userId", "value": "{{user_id}}" } ] },
            "body": {
              "mode": "raw",
              "raw": "[\n  {\n    \"productId\": \"<product-uuid>\",\n    \"quantity\": 1\n  }\n]"
            }
          }
        },
        {
          "name": "Get Orders For User",
          "request": {
            "method": "GET",
            "url": { "raw": "{{order_base_url}}/api/orders?userId={{user_id}}", "host": [ "{{order_base_url}}" ], "path": [ "api", "orders" ], "query": [ { "key": "userId", "value": "{{user_id}}" } ] }
          }
        }
      ]
    }
  ]
}
